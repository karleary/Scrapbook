

<h1>Listing Pictures</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.name %></td>
    <td><%= picture.description %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Remove', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
